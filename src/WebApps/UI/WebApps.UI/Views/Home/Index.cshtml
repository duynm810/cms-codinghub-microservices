@model HomeViewModel

@section scripts {
    <script>
        $(document).on('click', '.pagination a', function (e) {
            e.preventDefault();
            const page = $(this).attr('href').split('page=')[1];
            loadLatestPosts(page);
        });

        function loadLatestPosts(page) {
            $.ajax({
                url: '/Home/LatestPosts',
                type: 'GET',
                data: { page: page },
                success: function (response) {
                    if (response.success) {
                        $('#latest-posts-container').html(response.html);
                    } else {
                        showErrorNotification('Error loading posts');
                    }
                },
                error: function () {
                    showErrorNotification('Error loading posts');
                }
            });
        }
    </script>
}

<input type="hidden" id="current-page" value="@Model.LatestPosts.MetaData.CurrentPage" />
