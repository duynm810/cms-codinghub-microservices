@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    Layout = "_Layout";
}

@{
    var server = Configuration["ApiSettings:ServerUrl"];
    var port = Configuration["ApiSettings:Port"];
    var serverUrl = !string.IsNullOrEmpty(port) ? $"{server}:{port}" : $"{server}";
    
    ViewBag.ServerUrl = serverUrl;
}